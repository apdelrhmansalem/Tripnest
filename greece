  <!-- JavaScript for search -->
  <script>
    function searchCities() {
      const input = document.getElementById("searchInput").value.toLowerCase();
      const cityCards = document.getElementsByClassName("city-card");

      for (let card of cityCards) {
        const cityName = card.querySelector(".city-name").textContent.toLowerCase();
        card.style.display = cityName.includes(input) ? "block" : "none";
      }
    }
  </script>

